---

<Page>
  <div class="space-y-20">
    <!-- Hero Section Title -->
    <section class="py-12 px-4 sm:px-6 lg:px-8 bg-surface-raised">
      <div class="mx-auto max-w-4xl text-center">
        <h1 class="text-4xl sm:text-5xl font-bold text-text mb-4">
          Marketing Components
        </h1>
        <p class="text-lg text-text-muted">
          Interactive showcase of all marketing sections with multiple layout
          variants
        </p>
      </div>
    </section>

    <!-- Hero Variants Section -->
    <section class="px-4">
      <div class="mx-auto max-w-6xl">
        <h2 class="text-3xl font-bold text-text mb-8">Hero Component</h2>
        <p class="text-text-muted mb-8">
          Supports three variants: centered, split-left, and split-right
        </p>
      </div>
    </section>

    <!-- Hero Centered Variant -->
    <div class="border-t border-b border-border">
      <div class="px-4">
        <div class="mx-auto max-w-6xl py-4">
          <p class="text-sm font-mono text-text-muted mb-4">
            Variant: <code class="bg-surface-1 px-2 py-1 rounded">centered</code
            >
          </p>
        </div>
      </div>
      <Hero {...heroData.centered} />
    </div>

    <!-- Hero Split Left Variant -->
    <div class="border-t border-b border-border">
      <div class="px-4">
        <div class="mx-auto max-w-6xl py-4">
          <p class="text-sm font-mono text-text-muted mb-4">
            Variant: <code class="bg-surface-1 px-2 py-1 rounded"
              >split-left</code
            >
          </p>
        </div>
      </div>
      <Hero {...heroData.splitLeft} />
    </div>

    <!-- Hero Split Right Variant -->
    <div class="border-t border-b border-border">
      <div class="px-4">
        <div class="mx-auto max-w-6xl py-4">
          <p class="text-sm font-mono text-text-muted mb-4">
            Variant: <code class="bg-surface-1 px-2 py-1 rounded"
              >split-right</code
            >
          </p>
        </div>
      </div>
      <Hero {...heroData.splitRight} />
    </div>

    <!-- Features Section -->
    <section class="px-4">
      <div class="mx-auto max-w-6xl">
        <h2 class="text-3xl font-bold text-text mb-8">Features Component</h2>
        <p class="text-text-muted mb-12">
          Supports three variants: grid-3, grid-2, and list
        </p>
      </div>
    </section>

    <!-- Features Grid 3 -->
    <div class="border-t border-b border-border">
      <div class="px-4">
        <div class="mx-auto max-w-6xl py-4">
          <p class="text-sm font-mono text-text-muted mb-4">
            Variant: <code class="bg-surface-1 px-2 py-1 rounded">grid-3</code>
          </p>
        </div>
      </div>
      <Features variant="grid-3" items={featuresData} />
    </div>

    <!-- Features Grid 2 -->
    <div class="border-t border-b border-border">
      <div class="px-4">
        <div class="mx-auto max-w-6xl py-4">
          <p class="text-sm font-mono text-text-muted mb-4">
            Variant: <code class="bg-surface-1 px-2 py-1 rounded">grid-2</code>
          </p>
        </div>
      </div>
      <Features variant="grid-2" items={featuresData} />
    </div>

    <!-- Features List -->
    <div class="border-t border-b border-border">
      <div class="px-4">
        <div class="mx-auto max-w-6xl py-4">
          <p class="text-sm font-mono text-text-muted mb-4">
            Variant: <code class="bg-surface-1 px-2 py-1 rounded">list</code>
          </p>
        </div>
      </div>
      <Features variant="list" items={featuresData.slice(0, 4)} />
    </div>

    <!-- Testimonials Section -->
    <section class="px-4">
      <div class="mx-auto max-w-6xl">
        <h2 class="text-3xl font-bold text-text mb-8">
          Testimonials Component
        </h2>
        <p class="text-text-muted mb-12">
          Supports two variants: cards and carousel
        </p>
      </div>
    </section>

    <!-- Testimonials Cards -->
    <div class="border-t border-b border-border">
      <div class="px-4">
        <div class="mx-auto max-w-6xl py-4">
          <p class="text-sm font-mono text-text-muted mb-4">
            Variant: <code class="bg-surface-1 px-2 py-1 rounded">cards</code>
          </p>
        </div>
      </div>
      <Testimonials variant="cards" items={testimonialsData} />
    </div>

    <!-- Testimonials Carousel -->
    <div class="border-t border-b border-border">
      <div class="px-4">
        <div class="mx-auto max-w-6xl py-4">
          <p class="text-sm font-mono text-text-muted mb-4">
            Variant: <code class="bg-surface-1 px-2 py-1 rounded">carousel</code
            >
          </p>
        </div>
      </div>
      <Testimonials variant="carousel" items={testimonialsData} />
    </div>

    <!-- Pricing Section -->
    <section class="px-4">
      <div class="mx-auto max-w-6xl">
        <h2 class="text-3xl font-bold text-text mb-8">Pricing Component</h2>
        <p class="text-text-muted mb-12">
          Highlight one plan as the recommended option
        </p>
      </div>
    </section>

    <div class="border-t border-b border-border">
      <Pricing plans={pricingData} />
    </div>

    <!-- FAQ Section -->
    <section class="px-4">
      <div class="mx-auto max-w-6xl">
        <h2 class="text-3xl font-bold text-text mb-8">FAQ Component</h2>
        <p class="text-text-muted mb-12">
          Interactive accordion for frequently asked questions
        </p>
      </div>
    </section>

    <div class="border-t border-b border-border">
      <FAQ items={faqData} />
    </div>

    <!-- LogoBar Section -->
    <section class="px-4">
      <div class="mx-auto max-w-6xl">
        <h2 class="text-3xl font-bold text-text mb-8">LogoBar Component</h2>
        <p class="text-text-muted mb-12">
          Horizontal strip of partner or technology logos
        </p>
      </div>
    </section>

    <div class="border-t border-b border-border">
      <LogoBar logos={logosData} />
    </div>

    <!-- CTA Section -->
    <section class="px-4">
      <div class="mx-auto max-w-6xl">
        <h2 class="text-3xl font-bold text-text mb-8">CTA Component</h2>
        <p class="text-text-muted mb-12">
          Full-width call-to-action band with high contrast
        </p>
      </div>
    </section>

    <div class="border-t border-b border-border">
      <CTA
        headline="Ready to build your marketing site?"
        subtext="Get started with StellarBoat and launch in under an hour"
        cta={{ label: 'Start Building', href: '#' }}
      />
    </div>
  </div>
</Page>
