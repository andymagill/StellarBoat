---
import Page from '../layouts/Page.astro';
import Button from '../components/ui/Button.astro';
import Card from '../components/ui/Card.astro';
import Badge from '../components/ui/Badge.astro';
import Alert from '../components/ui/Alert.astro';
import Divider from '../components/ui/Divider.astro';
import Icon from '../components/ui/Icon.astro';

// Token definitions based on the Deep Space theme from tokens.css
const colors = {
  'primitive-midnight': '#0a0e27',
  'primitive-space-blue': '#1a1f3a',
  'primitive-starfield': '#000000',
  'primitive-neon-cyan': '#00d9ff',
  'primitive-neon-purple': '#c000ff',
  'primitive-text-white': '#ffffff',
  'primitive-text-gray': '#b0b8c8',
  'primitive-border': '#2d3a5a',
  primary: {
    '50': '#e0f7ff',
    '100': '#b3ebff',
    '200': '#80e0ff',
    '300': '#4dd5ff',
    '400': '#00d9ff',
    '500': '#00b8d4',
    '600': '#0099bb',
    '700': '#006b8a',
    '800': '#003d59',
  },
  secondary: {
    '50': '#f5e0ff',
    '100': '#e6b3ff',
    '200': '#d680ff',
    '300': '#c74dff',
    '400': '#c000ff',
    '500': '#9900cc',
    '600': '#720099',
    '700': '#4d0066',
    '800': '#330044',
  },
};

const typography = [
  {
    level: 'XL',
    size: '2.5rem (40px)',
    weight: '700 (bold)',
    lineHeight: '1.1',
    usage: 'Page titles',
  },
  {
    level: 'LG',
    size: '1.75rem (28px)',
    weight: '600 (semibold)',
    lineHeight: '1.2',
    usage: 'Section headings',
  },
  {
    level: 'Base',
    size: '1rem (16px)',
    weight: '400 (regular)',
    lineHeight: '1.6',
    usage: 'Body text',
  },
  {
    level: 'SM',
    size: '0.875rem (14px)',
    weight: '500 (medium)',
    lineHeight: '1.6',
    usage: 'Small labels, captions',
  },
  {
    level: 'XS',
    size: '0.75rem (12px)',
    weight: '500 (medium)',
    lineHeight: '1.4',
    usage: 'Badges, tags, UI labels',
  },
];

const spacing = [
  { name: 'XS', value: '8px', class: 'gap-2' },
  { name: 'SM', value: '12px', class: 'gap-3' },
  { name: 'MD', value: '24px', class: 'gap-6' },
  { name: 'LG', value: '32px', class: 'gap-8' },
  { name: 'Section', value: '96px', class: 'gap-24' },
];

const radii = [
  { name: 'MD', value: '8px', class: 'rounded' },
  { name: 'LG', value: '16px', class: 'rounded-lg' },
  { name: 'Full', value: '9999px', class: 'rounded-full' },
];

const shadows = [
  { name: 'None', desc: 'Default state', css: 'none' },
  { name: 'Soft', desc: 'Hover on cards', css: '0 2px 8px rgba(0,0,0,0.3)' },
  {
    name: 'Glow Cyan',
    desc: 'Interactive focus',
    css: '0 0 16px rgba(0,217,255,0.5)',
  },
  {
    name: 'Glow Purple',
    desc: 'Decorative accents',
    css: '0 0 24px rgba(192,0,255,0.4)',
  },
];
---

<Page
  title="UI Primitives & Design System"
  description="Atomic UI components and visual design tokens"
>
  <div class="max-w-4xl mx-auto px-6 py-12">
    <h1 class="text-4xl font-bold mb-2">UI Primitives</h1>
    <p class="text-text-muted mb-8">
      Accessible, composable UI primitives for building marketing sections. Plus
      the complete Deep Space design system — the visual language and tokens
      that power StellarBoat.
    </p>

    <!-- Button Variants -->
    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-6">Button</h2>

      <div class="space-y-8">
        <!-- Button / Primary -->
        <div>
          <h3 class="text-sm font-medium text-text-muted mb-3">Primary</h3>
          <div class="flex flex-wrap gap-3">
            <Button variant="primary" size="sm">Small</Button>
            <Button variant="primary" size="md">Medium</Button>
            <Button variant="primary" size="lg">Large</Button>
            <Button variant="primary" size="md" href="#demo">Link</Button>
            <Button variant="primary" size="md" type="submit">Submit</Button>
          </div>
        </div>

        <!-- Button / Secondary -->
        <div>
          <h3 class="text-sm font-medium text-text-muted mb-3">Secondary</h3>
          <div class="flex flex-wrap gap-3">
            <Button variant="secondary" size="sm">Small</Button>
            <Button variant="secondary" size="md">Medium</Button>
            <Button variant="secondary" size="lg">Large</Button>
          </div>
        </div>

        <!-- Button / Ghost -->
        <div>
          <h3 class="text-sm font-medium text-text-muted mb-3">Ghost</h3>
          <div class="flex flex-wrap gap-3">
            <Button variant="ghost" size="sm">Small</Button>
            <Button variant="ghost" size="md">Medium</Button>
            <Button variant="ghost" size="lg">Large</Button>
          </div>
        </div>
      </div>
    </section>

    <Divider />

    <!-- Card -->
    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-6">Card</h2>

      <div class="space-y-8">
        <!-- Card / Default -->
        <div>
          <h3 class="text-sm font-medium text-text-muted mb-3">Default</h3>
          <Card variant="default">
            <h4 class="text-lg font-semibold mb-2">Default Card</h4>
            <p class="text-text-muted">
              Standard card with default surface background. Use for primary
              content containers.
            </p>
          </Card>
        </div>

        <!-- Card / Raised -->
        <div>
          <h3 class="text-sm font-medium text-text-muted mb-3">Raised</h3>
          <Card variant="raised">
            <h4 class="text-lg font-semibold mb-2">Raised Card</h4>
            <p class="text-text-muted">
              Elevated card with raised surface background. Use for featured or
              highlighted content.
            </p>
          </Card>
        </div>
      </div>
    </section>

    <Divider />

    <!-- Badge Variants -->
    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-6">Badge</h2>

      <div class="space-y-6">
        <div>
          <h3 class="text-sm font-medium text-text-muted mb-3">Primary</h3>
          <Badge variant="primary">Primary</Badge>
        </div>

        <div>
          <h3 class="text-sm font-medium text-text-muted mb-3">Secondary</h3>
          <Badge variant="secondary">Secondary</Badge>
        </div>

        <div>
          <h3 class="text-sm font-medium text-text-muted mb-3">Success</h3>
          <Badge variant="success">Success</Badge>
        </div>

        <div>
          <h3 class="text-sm font-medium text-text-muted mb-3">Warning</h3>
          <Badge variant="warning">Warning</Badge>
        </div>

        <div>
          <h3 class="text-sm font-medium text-text-muted mb-3">Error</h3>
          <Badge variant="error">Error</Badge>
        </div>

        <div>
          <h3 class="text-sm font-medium text-text-muted mb-3">Info</h3>
          <Badge variant="info">Info</Badge>
        </div>
      </div>
    </section>

    <Divider />

    <!-- Alert Variants -->
    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-6">Alert</h2>

      <div class="space-y-4">
        <div>
          <h3 class="text-sm font-medium text-text-muted mb-2">Info</h3>
          <Alert variant="info">
            <Icon name="heroicons:information-circle" size={20} />
            <span>This is an informational message for user guidance.</span>
          </Alert>
        </div>

        <div>
          <h3 class="text-sm font-medium text-text-muted mb-2">Success</h3>
          <Alert variant="success">
            <Icon name="heroicons:check-circle" size={20} />
            <span>Your action completed successfully!</span>
          </Alert>
        </div>

        <div>
          <h3 class="text-sm font-medium text-text-muted mb-2">
            Warning (role=alert)
          </h3>
          <Alert variant="warning">
            <Icon name="heroicons:exclamation-triangle" size={20} />
            <span>Be careful with this action—it may have consequences.</span>
          </Alert>
        </div>

        <div>
          <h3 class="text-sm font-medium text-text-muted mb-2">
            Error (role=alert)
          </h3>
          <Alert variant="error">
            <Icon name="heroicons:x-circle" size={20} />
            <span>Something went wrong. Please try again.</span>
          </Alert>
        </div>
      </div>
    </section>

    <Divider />

    <!-- Divider -->
    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-6">Divider</h2>
      <p class="text-text-muted mb-4">Horizontal separator between sections:</p>
      <div>Content above</div>
      <Divider />
      <div>Content below</div>
    </section>

    <Divider />

    <!-- Icon -->
    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-6">Icon</h2>

      <div class="space-y-6">
        <div>
          <h3 class="text-sm font-medium text-text-muted mb-3">
            Decorative (aria-hidden)
          </h3>
          <div class="flex gap-3">
            <Icon name="heroicons:star" size={24} />
            <Icon name="heroicons:heart" size={24} />
            <Icon name="heroicons:rocket-launch" size={24} />
          </div>
        </div>

        <div>
          <h3 class="text-sm font-medium text-text-muted mb-3">
            Meaningful (aria-label)
          </h3>
          <div class="flex gap-3">
            <Icon name="heroicons:home" size={24} label="Home" />
            <Icon name="heroicons:envelope" size={24} label="Contact" />
            <Icon name="heroicons:cog-6-tooth" size={24} label="Settings" />
          </div>
        </div>

        <div>
          <h3 class="text-sm font-medium text-text-muted mb-3">
            Different Sizes
          </h3>
          <div class="flex items-center gap-3">
            <Icon name="heroicons:star" size={16} />
            <Icon name="heroicons:star" size={20} />
            <Icon name="heroicons:star" size={24} />
            <Icon name="heroicons:star" size={32} />
            <Icon name="heroicons:star" size={40} />
          </div>
        </div>
      </div>
    </section>

    <Divider />

    <!-- Design Tokens Section -->
    <section class="mb-12">
      <h2 class="text-2xl font-semibold mb-8">Design Tokens</h2>
      <p class="text-text-muted mb-12">
        The Deep Space visual system — replace these tokens in
        <code class="bg-surface-2 px-2 py-1 rounded text-xs font-mono"
          >src/styles/tokens.css</code
        > to rebrand StellarBoat.
      </p>
    </section>

    <!-- Color System -->
    <section class="mb-16">
      <h3 class="text-lg font-semibold text-primary-400 mb-8">Color Palette</h3>

      <!-- Primitive Colors -->
      <h4 class="text-base font-semibold text-text mb-4">Primitive Scale</h4>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-8">
        {
          Object.entries(colors)
            .filter(([, value]) => typeof value === 'string')
            .map(([name, value]) => (
              <div>
                <div
                  class="rounded-lg h-24 border border-border mb-2"
                  style={{ backgroundColor: value as string }}
                />
                <p class="text-xs font-semibold text-text">{name}</p>
                <p class="text-xs text-text-muted font-mono">{value}</p>
              </div>
            ))
        }
      </div>

      <!-- Primary Color Scale -->
      <h4 class="text-base font-semibold text-text mb-4">
        Primary Accent (Neon Cyan)
      </h4>
      <div class="grid grid-cols-3 md:grid-cols-5 gap-3 mb-8">
        {
          Object.entries(colors.primary).map(([shade, hex]) => (
            <div>
              <div
                class="rounded-lg h-16 border border-border mb-2"
                style={{ backgroundColor: hex }}
              />
              <p class="text-xs font-semibold text-text">primary-{shade}</p>
              <p class="text-xs text-text-muted font-mono">{hex}</p>
            </div>
          ))
        }
      </div>

      <!-- Secondary Color Scale -->
      <h4 class="text-base font-semibold text-text mb-4">
        Secondary Accent (Neon Purple)
      </h4>
      <div class="grid grid-cols-3 md:grid-cols-5 gap-3 mb-8">
        {
          Object.entries(colors.secondary).map(([shade, hex]) => (
            <div>
              <div
                class="rounded-lg h-16 border border-border mb-2"
                style={{ backgroundColor: hex }}
              />
              <p class="text-xs font-semibold text-text">secondary-{shade}</p>
              <p class="text-xs text-text-muted font-mono">{hex}</p>
            </div>
          ))
        }
      </div>
    </section>

    <!-- Typography -->
    <section class="mb-16">
      <h3 class="text-lg font-semibold text-primary-400 mb-8">
        Typography Scale
      </h3>
      <div class="overflow-x-auto">
        <table class="w-full text-left">
          <thead>
            <tr class="border-b border-border">
              <th
                class="px-4 py-2 text-xs font-semibold text-text-muted uppercase"
              >
                Level
              </th>
              <th
                class="px-4 py-2 text-xs font-semibold text-text-muted uppercase"
              >
                Size
              </th>
              <th
                class="px-4 py-2 text-xs font-semibold text-text-muted uppercase"
              >
                Weight
              </th>
              <th
                class="px-4 py-2 text-xs font-semibold text-text-muted uppercase"
              >
                Line Height
              </th>
              <th
                class="px-4 py-2 text-xs font-semibold text-text-muted uppercase"
              >
                Usage
              </th>
            </tr>
          </thead>
          <tbody>
            {
              typography.map((row) => (
                <tr class="border-b border-border hover:bg-surface-2">
                  <td class="px-4 py-3 font-semibold text-text">{row.level}</td>
                  <td class="px-4 py-3 text-text-muted">{row.size}</td>
                  <td class="px-4 py-3 text-text-muted">{row.weight}</td>
                  <td class="px-4 py-3 text-text-muted">{row.lineHeight}</td>
                  <td class="px-4 py-3 text-text-muted">{row.usage}</td>
                </tr>
              ))
            }
          </tbody>
        </table>
      </div>
    </section>

    <!-- Spacing -->
    <section class="mb-16">
      <h3 class="text-lg font-semibold text-primary-400 mb-8">Spacing Scale</h3>
      <div class="space-y-4">
        {
          spacing.map((s) => (
            <div>
              <p class="text-sm font-semibold text-text mb-2">
                {s.name} — {s.value}
              </p>
              <div
                class="bg-surface-2 rounded-lg px-4 py-2 text-xs text-text-muted font-mono"
                style={{ height: s.value }}
              >
                {s.value}
              </div>
            </div>
          ))
        }
      </div>
    </section>

    <!-- Border Radius -->
    <section class="mb-16">
      <h3 class="text-lg font-semibold text-primary-400 mb-8">Border Radius</h3>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        {
          radii.map((r) => (
            <div>
              <p class="text-sm font-semibold text-text mb-2">
                {r.name} — {r.value}
              </p>
              <div class={`bg-primary-400 h-32 w-32 ${r.class}`} />
            </div>
          ))
        }
      </div>
    </section>

    <!-- Shadows & Glows -->
    <section class="mb-16">
      <h3 class="text-lg font-semibold text-primary-400 mb-8">
        Shadows & Glows
      </h3>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {
          shadows.map((shadow) => (
            <div>
              <p class="text-sm font-semibold text-text mb-1">{shadow.name}</p>
              <p class="text-xs text-text-muted mb-3">{shadow.desc}</p>
              <div
                class="bg-surface-2 h-24 rounded-lg"
                style={{ boxShadow: shadow.css }}
              />
              <p class="text-xs text-text-muted font-mono mt-2">{shadow.css}</p>
            </div>
          ))
        }
      </div>
    </section>

    <!-- Info -->
    <section class="bg-surface-2 rounded-lg p-6 border border-border">
      <h3 class="text-lg font-bold text-text mb-2">About Design Tokens</h3>
      <p class="text-text-muted mb-3">
        All tokens are defined in <code
          class="bg-surface-1 px-2 py-1 rounded text-xs font-mono"
          >src/styles/tokens.css</code
        > using Tailwind v4's <code
          class="bg-surface-1 px-2 py-1 rounded text-xs font-mono">@theme</code
        > directive.
      </p>
      <p class="text-text-muted">
        Change any token value and the entire site updates instantly. Utilities
        like <code class="bg-surface-1 px-2 py-1 rounded text-xs font-mono"
          >bg-primary-500</code
        > and <code class="bg-surface-1 px-2 py-1 rounded text-xs font-mono"
          >text-secondary-200</code
        > automatically follow your changes.
      </p>
    </section>
  </div>
</Page>

<style>
  h1,
  h2,
  h3,
  h4 {
    color: var(--color-text);
  }
</style>
