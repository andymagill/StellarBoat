---
import Page from '../layouts/Page.astro';
---

<Page title="Home">
  <div class="max-w-6xl mx-auto px-6 py-12">
    <div class="py-12 space-y-6">
      <h1 class="text-4xl md:text-5xl font-bold text-text">
        Welcome to <span class="text-primary-400">StellarBoat</span>
      </h1>
      <p class="text-lg text-text-muted max-w-2xl">
        A production-ready Astro.js starter for marketing mini-sites and landing
        pages. Built with deep space aesthetics, design tokens, and modern web
        standards.
      </p>
      <div class="flex gap-4 pt-4">
        <a
          href="/demo/tokens"
          class="px-6 py-3 bg-primary-400 text-surface-1 font-semibold rounded-lg hover:opacity-90 transition-opacity"
        >
          View Design Tokens
        </a>
      </div>
    </div>
  </div>
</Page>
