---
import { footerConfig } from '../../config/footer';
import { siteConfig } from '../../config/site';
---

<footer class="bg-surface-2 border-t border-border mt-12">
  <div class="max-w-6xl mx-auto px-6 py-12">
    <!-- Footer content grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-8">
      <!-- Brand / Description -->
      <div>
        <h3 class="text-lg font-bold text-primary-400 mb-2">
          {siteConfig.brandName}
        </h3>
        {
          footerConfig.description && (
            <p class="text-sm text-text-muted">{footerConfig.description}</p>
          )
        }
      </div>

      <!-- Footer Navigation -->
      {
        footerConfig.nav && footerConfig.nav.length > 0 && (
          <nav aria-label="Site map" class="flex flex-col gap-2">
            <h4 class="text-xs font-semibold text-text-muted uppercase tracking-wider mb-2">
              Links
            </h4>
            {footerConfig.nav.map((item) => (
              <a
                href={item.href}
                class="text-sm text-text-muted hover:text-text transition-colors"
              >
                {item.label}
              </a>
            ))}
          </nav>
        )
      }

      <!-- Additional Columns -->
      {
        footerConfig.columns &&
          footerConfig.columns.length > 0 &&
          footerConfig.columns.map((column) => (
            <div>
              <h4 class="text-xs font-semibold text-text-muted uppercase tracking-wider mb-2">
                {column.title}
              </h4>
              <nav aria-label={column.title} class="flex flex-col gap-2">
                {column.links.map((item) => (
                  <a
                    href={item.href}
                    class="text-sm text-text-muted hover:text-text transition-colors"
                  >
                    {item.label}
                  </a>
                ))}
              </nav>
            </div>
          ))
      }

      <!-- Copyright -->
      <div>
        <p class="text-sm text-text-muted">
          Â© {footerConfig.copyrightYear}
          {siteConfig.brandName}
        </p>
      </div>
    </div>

    <!-- Bottom divider -->
    <div class="border-t border-border pt-6">
      {
        footerConfig.tagline && (
          <p class="text-xs text-text-muted text-center">
            {footerConfig.tagline}
          </p>
        )
      }
    </div>
  </div>
</footer>
