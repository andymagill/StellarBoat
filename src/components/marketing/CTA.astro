---
/**
 * CTA Component
 *
 * A full-width call-to-action band with headline, subtext, and an action button.
 * Designed to prompt user action with contrast and emphasis.
 *
 * @example
 * ```astro
 * <CTA
 *   headline="Ready to get started?"
 *   subtext="Join thousands of satisfied customers"
 *   cta={{ label: "Start Free Trial", href: "/signup" }}
 * />
 * ```
 */

import Button from '../ui/Button.astro';

interface CTAButton {
  /** Button text */
  label: string;
  /** Button link href */
  href: string;
}

interface Props {
  /** Main headline text */
  headline: string;
  /** Optional subtext below headline */
  subtext?: string;
  /** Call-to-action button */
  cta: CTAButton;
  /** Additional CSS classes to apply to the root element */
  class?: string;
}

const { headline, subtext, cta, class: classProp = '' } = Astro.props as Props;
---

<section class={`bg-primary-500 py-16 px-4 sm:px-6 lg:px-8 ${classProp}`}>
  <div class="mx-auto max-w-6xl text-center">
    <h2
      class="text-3xl sm:text-4xl font-bold text-primary-800 mb-4 text-center"
    >
      {headline}
    </h2>
    {
      subtext && (
        <p class="text-lg text-primary-800 mb-8 text-center">{subtext}</p>
      )
    }
    <Button href={cta.href} variant="secondary" size="lg">
      {cta.label}
    </Button>
  </div>
</section>
