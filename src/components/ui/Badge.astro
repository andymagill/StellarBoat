---
/**
 * Badge Component
 *
 * A small, inline label presented as a pill shape.
 * Supports multiple color variants for semantic meaning.
 */

interface Props {
  /** Badge color variant */
  variant?: 'primary' | 'secondary' | 'success' | 'warning' | 'error' | 'info';
  /** Additional CSS classes to apply to the root element */
  class?: string;
}

const { variant = 'primary', class: classProp = '' } = Astro.props as Props;

// Base styles
const baseStyles =
  'inline-flex items-center rounded-full text-xs font-semibold whitespace-nowrap';

// Variant styles
const variantStyles = {
  primary: 'bg-primary-900 text-primary-100',
  secondary: 'bg-secondary-900 text-secondary-100',
  success: 'bg-neutral-800 text-success',
  warning: 'bg-neutral-800 text-warning',
  error: 'bg-neutral-800 text-error',
  info: 'bg-neutral-800 text-info',
};

const classes = `${baseStyles} px-3 py-1 ${variantStyles[variant]} ${classProp}`;
---

<span class={classes}>
  <slot />
</span>
