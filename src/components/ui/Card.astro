---
/**
 * Card Component
 *
 * A surface container with border, rounded corners, and shadow.
 * Provides a consistent elevated surface for content.
 */

interface Props {
  /** Additional CSS classes to apply to the root element */
  class?: string;
}

const { class: classProp = '' } = Astro.props;

const classes = `bg-surface-1 border border-border rounded-lg shadow-md p-6 ${classProp}`;
---

<div class={classes}>
  <slot />
</div>
