---
/**
 * Card Component
 *
 * A surface container with border, rounded corners, and shadow.
 * Provides a consistent elevated surface for content with optional variants.
 */

interface Props {
  /** Card style variant */
  variant?: 'default' | 'raised';
  /** Additional CSS classes to apply to the root element */
  class?: string;
}

const { variant = 'default', class: classProp = '' } = Astro.props as Props;

// Variant background colors
const variantStyles = {
  default: 'bg-neutral-900',
  raised: 'bg-neutral-800',
};

const classes = `${variantStyles[variant]} border border-neutral-700 rounded-lg shadow-md p-6 my-6 card-container ${classProp}`;
---

<div class={classes}>
  <slot />
</div>

<style>
  .card-container > :global(div > *:first-child) {
    margin-top: 0 !important;
  }
</style>
