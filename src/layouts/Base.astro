---
import { siteConfig } from '../config/site';
import { analytics } from '../config/analytics';
import SEO from '../components/seo/SEO.astro';
import OpenGraph from '../components/seo/OpenGraph.astro';
import JsonLd from '../components/seo/JsonLd.astro';
import Analytics from '../components/analytics/Analytics.astro';
import CookieBanner from '../components/analytics/CookieBanner.astro';
import '../styles/tokens.css';
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
  image?: string;
  canonicalUrl?: string;
  noIndex?: boolean;
  /** JSON-LD schema objects to inject in <head>. Each layout populates this. */
  schemas?: Record<string, unknown>[];
}

const {
  title,
  description = siteConfig.tagline,
  image,
  canonicalUrl = Astro.url.href,
  noIndex = false,
  schemas,
} = Astro.props;
---

<!doctype html>
<html lang={siteConfig.locale ?? 'en'}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <SEO {title} {description} {canonicalUrl} {noIndex} />
    <OpenGraph {title} {description} {image} />
    {schemas?.map((schema) => <JsonLd schema={schema} />)}

    <Analytics />

    <!-- Preload hero background image for LCP optimization -->
    <link rel="preload" as="image" href="/images/hero-background.png" />

    <!-- Favicon placeholder -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body>
    {
      analytics.gtmId && import.meta.env.PROD && (
        <noscript>
          <iframe
            title="Google Tag Manager (noscript)"
            src={`https://www.googletagmanager.com/ns.html?id=${analytics.gtmId}`}
            height="0"
            width="0"
            style="display:none;visibility:hidden"
          />
        </noscript>
      )
    }
    <slot />
    <CookieBanner />
  </body>
</html>
